<launch>
  
  <param name="/robucar_driver/robotip" type="string" value="127.0.0.1" />
  <param name="/robucar_driver/robotport" type="int" value="11000" />
  <param name="/robucar_driver/laptopip" type="string" value="127.0.0.1" />
  <param name="/robucar_driver/laptopport" type="int" value="12000" />
  
  <node pkg="robucar_driver" type="robucar_actuators.py" name="robucar_driver_ctrl" output="screen"></node>

  <node pkg="robucar_driver" type="robucar_monitor.py"  name="robucar_mon"  output="screen"></node>

  <node pkg="robucar_controller" type="base_controller.py"  name="base_controller"  output="screen"></node>

  <node pkg="robucar_tele" type="tele_joy_remote.py"  name="tele_joy_remote"  output="screen"></node>

  <node pkg="robucar_tele" type="tele_joy.py"  name="tele_joy"  output="screen"></node>
  
  <node respawn="true" pkg="joy" type="joy_node"  name="joy_remote"  output="screen">
  	<param name="dev" type="string" value="/dev/input/js1" />
  </node>

</launch>
